@{
    ViewData["Title"] = "Select";
}

<h2>Select</h2>

<br />
<h4>Course</h4>

@foreach (var item in Model)
{
    <table>
        <tbody>
            <tr>
                <td>
                    @Html.DisplayNameFor(modelItem => item.Course.ID): @Html.DisplayFor(modelItem => item.Course.ID)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(modelItem => item.Course.Title): @Html.DisplayFor(modelItem => item.Course.Title)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(modelItem => item.Course.Description): @Html.DisplayFor(modelItem => item.Course.Description)
                </td>
            </tr>
        </tbody>
    </table>    
    //break;
}
<br />
<h4>Teacher</h4>

@foreach (var item in Model)
{
    <table>
