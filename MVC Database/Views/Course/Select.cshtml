            <tr>
                <td>
                    @Html.DisplayNameFor(modelItem => item.Course.Teacher.FullName): @Html.DisplayFor(modelItem => item.Course.Teacher.FullName)
                </td>
            </tr>
        </tbody>
    </table>    
    //break;
}
<br />
<h4>Students</h4>

@foreach (var item in Model)
{
    <table>
        <tbody>
            <tr>
                <td>
                    @Html.DisplayNameFor(modelItem => item.Student.FullName): @Html.DisplayFor(modelItem => item.Student.FullName)
                </td>
            </tr>
        </tbody>
    </table>
}

