@model Course
@{
    ViewData["Title"] = "Remove Teacher from Course";
}

<h2>Remove Teacher form Course</h2>

<br />
<p>Are you sure you want to remove this?</p>

<hr />

<div class="row">
    <div class="col-2"><label asp-for="@Model.Teacher.FirstName"></label></div>
    <div class="col-2"><label asp-for="@Model.Teacher.LastName"></label></div>
    <div class="col-2"><label asp-for="@Model.Teacher.Email"></label></div>
</div>

<br />
<div class="row">
    <div class="col-2">@Model.Teacher.FirstName</div>
    <div class="col-2">@Model.Teacher.LastName</div>
    <div class="col-2">@Model.Teacher.Email</div>
</div>

<hr />

<form asp-action="DeleteTeacherCourse">
    <input type="submit" value="Remove" class="btn btn-sm btn-danger" /> |
    <a asp-action="Select" asp-route-id="@Model.ID">Back to Selected</a>
</form>
