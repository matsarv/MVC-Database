@model StudentCourse
@{
    ViewData["Title"] = "Remove Student from Course";
}

<h2>Remove Student form Course</h2>

<br />
<p>Are you sure you want to remove this?</p>

<hr />

<div class="row">
    <div class="col-2"><label asp-for="@Model.Student.FirstName"></label></div>
    <div class="col-2"><label asp-for="@Model.Student.LastName"></label></div>
    <div class="col-2"><label asp-for="@Model.Student.Email"></label></div>
</div>

<br />
<div class="row">
    <div class="col-2">@Model.Student.FirstName</div>
    <div class="col-2">@Model.Student.LastName</div>
    <div class="col-2">@Model.Student.Email</div>
</div>

<hr />

<form asp-action="DeleteStudentCourse">

    <input type="hidden" name="studentid" value="@Model.StudentId" />
    <input type="hidden" name="courseid" value="@Model.CourseId" />
    <input type="submit" value="Remove" class="btn btn-sm btn-danger" /> |
    <a asp-action="Select" asp-route-id="@Model.Course.ID">Back to Select</a>
</form>


