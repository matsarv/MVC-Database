@model CourseStudentsViewModel

@{
    ViewData["Title"] = "Add Student To Course";
}

<h2>Add Student To Course</h2>

<br />
<h4>@Model.course.Title</h4>

<br />
<hr />

<div class="row">
    <div class="col-2">FirstName</div>
    <div class="col-2">LastName</div>
    <div class="col-2">Email</div>
</div>

<br>

@foreach (var item in Model.students)
{
    <div id="row" class="row">
        <div class="col-2">@item.FirstName</div>
        <div class="col-2">@item.LastName</div>
        <div class="col-6">@item.Email</div>
        <div class="col-2">
            <a asp-controller="Course" asp-action="AddStudentCourseSave" asp-route-StudentId="@item.ID" asp-route-id="@Model.course.ID" class="btn btn-sm btn-success">Add</a>
        </div>
    </div>
}

<hr />

<a asp-controller="Course" asp-action="Select" asp-route-id="@Model.course.ID">Back to Select</a>