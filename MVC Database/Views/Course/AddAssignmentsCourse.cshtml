@model CourseAssigmentsViewModel

@{
    ViewData["Title"] = "Add Assignments To Course";
}

<h2>Add Assignments To Course</h2>

<br />
<h4>@Model.course.Title</h4>

<br />
<hr />

<div class="row">
    <div class="col-1">Nr</div>
    <div class="col-4">Title</div>
    <div class="col-4">Description</div>
    <div class="col-1">Credits</div>
    <div class="col-2"></div>
</div>

<br />

@foreach (var item in Model.assignments)
{
    if (item.CourseID == Model.course.ID)
    {
        <div id="row" class="row">
            <div class="col-1">@item.AssignmentNumber</div>
            <div class="col-4">@item.Title</div>
            <div class="col-4">@item.Description</div>
            <div class="col-1">@item.Credits</div>
            <div class="col-2">
                <a asp-controller="Assignment" asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-success">Edit</a>
                <a asp-controller="Assignment" asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-success">Delete</a>
            </div>
        </div>

    }

}

<hr />

<a asp-controller="Assignment" asp-action="Create" asp-route-courseid="@Model.course.ID" asp-route-coursename="@Model.course.Title" method="get" class="btn btn-sm btn-success">Create New</a> | 
<a asp-controller="Course" asp-action="Select" asp-route-id="@Model.course.ID">Back to Select</a> |
<a asp-controller="Course" asp-action="Index">Back to Index</a>