@model Assignment
@{
    ViewData["Title"] = "Assignment - Create";
}

<h2>Assignment - Create</h2>
<br />

<h4>@ViewBag.coursename</h4>

<br />
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-warning"></div>

            <input type="hidden" asp-for="ID" class="form-control" />
            <input type="hidden" asp-for="CourseID" value="@ViewBag.courseid" class="form-control" />

            <div class="form-group">
                <label asp-for="AssignmentNumber" class="control-label"></label>
                <input asp-for="AssignmentNumber" class="form-control" />
                <span asp-validation-for="AssignmentNumber" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Credits" class="control-label"></label>
                <input asp-for="Credits" class="form-control" />
                <span asp-validation-for="Credits" class="text-warning"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" asp-route-id="@ViewBag.courseid" class="btn btn-sm btn-success" /> |
                @*<a asp-controller="Course" asp-action="AddAssignmentsCourse" asp-route-id="@ViewBag.courseid">Back to Add</a>*@ 
                <a asp-controller="Course" asp-action="Select" asp-route-id="@ViewBag.courseid">Back to Select</a>
            </div>
        </form>
    </div>
</div>
