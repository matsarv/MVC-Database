@model Student

@{
    ViewData["Title"] = "Student - Details";
}

<h2>Student - Details</h2>

<br />
<hr />

<div class="row badge-dark">
    <div class="col-2"><label asp-for="@Model.FirstName"></label></div>
    <div class="col-2"><label asp-for="@Model.LastName"></label></div>
    <div class="col-2"><label asp-for="@Model.Email"></label></div>
</div>

<br />
<div class="row">
    <div class="col-2">@Model.FirstName</div>
    <div class="col-2">@Model.LastName</div>
    <div class="col-2">@Model.Email</div>
</div>

<br /><br />

@foreach (var item in Model.StudentCourses)
{
    <hr />
    <h4>Couse</h4>

    <div class="row">
        <div class="col-1"></div>
        <div class="col-11">@item.Course.Title</div>
    </div>

    <br />
    <h5>Assignments</h5>

    @foreach (var item2 in item.Course.Assignment)
    {
        <div class="row">
            <div class="col-1"></div>
            <div class="col-11">@item2.Title</div>
        </div>
    }

    <br />
}


<hr />

<a asp-controller="Student" asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-sm btn-success">Edit</a>
<a asp-controller="Student" asp-action="Delete" asp-route-id="@Model.ID" class="btn btn-sm btn-success">Delete</a> |
<a asp-action="Index">Back to Index</a>

